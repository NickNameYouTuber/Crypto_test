<resources>

    <!-- Base application theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="buttonColor">@color/buttonColor</item>
        <item name="buttonTextColor">@color/buttonTextColor</item>
    </style>

    <!-- Light theme -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="android:windowBackground">@color/backgroundLight</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryLight</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryLight</item>
        <item name="buttonColor">@color/buttonColorLight</item>
        <item name="buttonTextColor">@color/buttonTextColorLight</item>
    </style>


    <!-- Base application theme -->
    <style name="Base.Theme.QryptApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your base theme here -->
    </style>

    <!-- Light Theme -->
    <style name="Theme.QryptApp.Light" parent="Base.Theme.QryptApp">
        <item name="backgroundColor">@color/white</item>
        <item name="textColor">@color/black</item>
        <item name="dotColor">@color/light_gray</item>
        <item name="android:statusBarColor">@color/yellow</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="buttonStyle">@style/Widget.App.Button.Light</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.QryptApp.Dark" parent="Base.Theme.QryptApp">
        <item name="backgroundColor">@color/dark_gray</item>
        <item name="textColor">@color/white</item>
        <item name="dotColor">@color/light_gray</item>
        <item name="android:statusBarColor">@color/yellow</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="buttonStyle">@style/Widget.App.Button.Dark</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.App.Button.Light" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/light_gray</item>
    </style>

    <style name="Widget.App.Button.Dark" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/light_gray</item>
    </style>

</resources>